<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>

  <PropertyGroup Condition="$(TargetFrameworkIdentifier.EndsWith('Android'))">
    <AndroidResgenFile Condition="$(AndroidResgenFile.Contains(';'))"/>
    <AndroidResgenFile Condition="'$(AndroidResgenFile)' == ''">Resources\Resource$(DefaultDesignerFileSuffix)$(DefaultLanguageSourceExtension)</AndroidResgenFile>
    <IncludeAndroidResgenFile Condition="'$(IncludeAndroidResgenFile)' == ''">true</IncludeAndroidResgenFile>
  </PropertyGroup>

</Project>