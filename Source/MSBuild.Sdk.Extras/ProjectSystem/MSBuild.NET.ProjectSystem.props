<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>

  <ItemGroup Condition="'$(DefineCommonManagedCapabilities)' == 'true' AND '$(_SdkDisableAdditionalCapabilities)' != 'true'">
    <ProjectCapability Include="SupportHierarchyContextSvc"/>
    <ProjectCapability Include="DynamicDependentFile"/>
    <ProjectCapability Include="DynamicFileNesting"/>
  </ItemGroup>

  <ItemGroup Condition="'$(DefineCommonManagedItemSchemas)' == 'true' AND '$(_SdkDisableAdditionalItemSchemas)' != 'true'">
    <PropertyPageSchema Include="$(_SdkProjectSystemRulesDirectory)Xaml.ProjectItemsSchema.xml">
      <Context>Project</Context>
    </PropertyPageSchema>
    <PropertyPageSchema Include="$(_SdkProjectSystemRulesDirectory)ApplicationDefinition.xml">
      <Context>File;BrowseObject</Context>
    </PropertyPageSchema>
    <PropertyPageSchema Include="$(_SdkProjectSystemRulesDirectory)Resource.xml">
      <Context>File;BrowseObject</Context>
    </PropertyPageSchema>
    <PropertyPageSchema Include="$(_SdkProjectSystemRulesDirectory)Page.xml">
      <Context>File;BrowseObject</Context>
    </PropertyPageSchema>
  </ItemGroup>

  <ItemGroup Condition="'$(DefineCommonManagedReferenceSchemas)' == 'true' AND '$(_SdkDisableAdditionalReferenceSchemas)' != 'true'">
    <!-- Add Addtional Reference Schemas -->
  </ItemGroup>

  <!-- Workaround for Including generated code so that Intellisense, CodeAnalysis and other features just work -->
  <ItemGroup Condition="'$(_SdkDisableWorkaroundCapabilities)' != 'true'">
    <ProjectCapability Condition="'$(EnableWpfProjectSetup)' == 'true'"
      Include="WindowsXaml;WindowsXamlPage;WindowsXamlCodeBehind;WindowsXamlResourceDictionary;WindowsXamlUserControl"/>
  </ItemGroup>

</Project>